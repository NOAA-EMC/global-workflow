cd $pwd
[[ ${KEEPDATA:-"NO"} = "NO" ]] && rm -rf $DATA

set +x
if [ $VERBOSE = "YES" ]; then
   echo $(date) EXITING $0 with return code $err >&2
fi
exit $err
