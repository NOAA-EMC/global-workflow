gfswave:
    {% set head = "gfswave.t" + cycle_HH + "z." %}
    name: "GFSWAVE"
    target: "{{ ATARDIR }}/{{ cycle_YMDH }}/gfswave.tar"
    required:
        # Wave GRIB2 regional forecast products
        {% for fh in range(0, FHMAX_HF_WAV + FHOUT_HF_WAV, FHOUT_HF_WAV) %}
        # NOTE This is as explicit as possible without major logic to parse wavepostGRD.
        #      Matches files of the form "gfswave.tCCz.<region>.<res>.fHHH.grib2".
        - "{{ COMOUT_WAVE_GRID | relpath(ROTDIR) }}/{{ head }}*.*.f{{ '%03d' % fh }}.grib2"
        - "{{ COMOUT_WAVE_GRID | relpath(ROTDIR) }}/{{ head }}*.*.f{{ '%03d' % fh }}.grib2.idx"
        {% endfor %}

        # Global wave GRIB2 forecast products
        {% for fh in range(FHMAX_HF_WAV + FHOUT_WAV, FHMAX_WAV_GFS + FHOUT_WAV, FHOUT_WAV) %}
        - "{{ COMOUT_WAVE_GRID | relpath(ROTDIR) }}/{{ head }}*.*.f{{ '%03d' % fh }}.grib2"
        - "{{ COMOUT_WAVE_GRID | relpath(ROTDIR) }}/{{ head }}*.*.f{{ '%03d' % fh }}.grib2.idx"
        {% endfor %}

        # Wave bulletins
        - "{{ COMOUT_WAVE_STATION | relpath(ROTDIR) }}/{{ head }}bull_tar"
        - "{{ COMOUT_WAVE_STATION | relpath(ROTDIR) }}/{{ head }}cbull_tar"
        - "{{ COMOUT_WAVE_STATION | relpath(ROTDIR) }}/{{ head }}spec_tar.gz"

        # Wave IBP bulletins
        {% if DOIBP_WAV %}
        - "{{ COMOUT_WAVE_STATION | relpath(ROTDIR) }}/{{ head }}ibpbull_tar"
        - "{{ COMOUT_WAVE_STATION | relpath(ROTDIR) }}/{{ head }}ibpcbull_tar"
        - "{{ COMOUT_WAVE_STATION | relpath(ROTDIR) }}/{{ head }}ibp_tar"
        {% endif %}
