# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true


[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2

[*.py]
indent_size = 4
max_line_length = 88

[*.txt]
indent_style = tab
indent_size = 4
max_line_length = 79

[*.{diff}]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
