.SUFFIXES:	.F .f .o .f90 .c

.F.f:
	$(CPP) $(CPPFLAGS) $< > $*.f

$(TARGET):	$(OBJST) $(OBJS)
	$(AR) $(ARFLAGS) $@ $(OBJST) $(OBJS)
	mv *.mod $(INCMOD)

.f.o:	
	$(FC) $(FFLAGS) -c $<

.f90.o:
	$(FC) $(FFLAGS) -c $<

.c.o :
	${CC} ${CFLAGS} -c $<

clean:	
	/bin/rm -f  $(TARGET) *.lst *.o *.mod

