#! /usr/bin/env bash

source "${HOMEgfs}/ush/preamble.sh"
source "${HOMEgfs}/ush/jjob_header.sh" -e "sfcanl" -c "base sfcanl"


##############################################
# Set variables used in the script
##############################################
export CDUMP="${RUN/enkf}"
if [[ ${RUN_ENVIR} = "nco" ]]; then
    export ROTDIR=${COMROOT:?}/${NET}/${envir}
fi


##############################################
# Begin JOB SPECIFIC work
##############################################
DATE_PREV=$(${NDATE} -${assim_freq} ${CDATE})
PDY_PREV=${DATE_PREV:0:8}
cyc_PREV=${DATE_PREV:8:2}
export GDUMP="gdas"

export OPREFIX="${CDUMP}.t${cyc}z."
export GPREFIX="${GDUMP}.t${cyc_PREV}z."
export APREFIX="${CDUMP}.t${cyc}z."

YMD=${PDY} HH=${cyc} generate_com -rx COM_OBS COM_ATMOS_ANALYSIS COM_ATMOS_RESTART

RUN=${GDUMP} YMD=${PDY_PREV} HH=${cyc_PREV} generate_com -rx \
    COM_OBS_PREV:COM_OBS_TMPL \
    COM_ATMOS_RESTART_PREV:COM_ATMOS_RESTART_TMPL

# Used by global_cycle.sh
declare -rx CDATE="${PDY}${cyc}"

###############################################################
# Run relevant script

${SFCANALSH:-${SCRgfs}/exglobal_atmos_sfcanl.sh}
status=$?
[[ ${status} -ne 0 ]] && exit ${status}


##############################################
# End JOB SPECIFIC work
##############################################

##############################################
# Final processing
##############################################
if [[ -e "${pgmout}" ]] ; then
  cat ${pgmout}
fi

##########################################
# Remove the Temporary working directory
##########################################
cd ${DATAROOT}
[[ ${KEEPDATA} = "NO" ]] && rm -rf ${DATA}


exit 0
